@model UpdateManufactory
@{
    ViewData["Title"] = "Create Manufactory";
}
<h2 style="text-align:center;color:red">EDIT MANUFACTORY</h2>
<form asp-controller="Home" asp-action="update" method="PUT">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-1">
            <label asp-for="Name"></label>
        </div>
        <div class="col-11">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button asp-controller="Home" asp-action="update" type="submit" class="btn btn-primary" >Update</button>
            <button asp-controller="Home" asp-action="index" class="btn btn-warning">Cancel</button>
        </div>
    </div>
</form>

